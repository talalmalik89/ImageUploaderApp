@{
    ViewData["Title"] = "Upload Image";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0" style="width: 400px; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
        <div class="card-header text-center text-white py-4">
            <h2 style="font-family: 'Poppins', sans-serif;">âœ¨ Upload Your Image âœ¨</h2>
        </div>
        <div class="card-body bg-white rounded-bottom p-4">
            <form asp-action="Index" asp-controller="Image" method="post" enctype="multipart/form-data">
                <div class="form-group mb-4">
                    <label for="file" class="form-label" style="font-weight: bold; color: #333;">Choose an Image</label>
                    <input type="file" class="form-control rounded-pill" name="file" id="file" style="border: 2px solid #ddd;" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-4 py-2 rounded-pill" style="background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%); border: none; color: white; font-weight: bold;">ðŸš€ Upload</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <p class="text-muted">@ViewData["Message"]</p>

                @if (ViewData["ImageUri"] != null)
                {
                    <div class="mt-4">
                        <h3 style="font-family: 'Poppins', sans-serif; color: #6a11cb;">Uploaded Image</h3>
                        <img src="@ViewData["ImageUri"]" alt="Uploaded Image" class="rounded shadow-lg" style="width: 100%; max-width: 250px; border: 4px solid #2575fc;" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
